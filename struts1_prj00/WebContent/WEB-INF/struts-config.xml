<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">
    
<struts-config>
	
	<form-beans>
		<form-bean name="helloWorldForm" type="it.alpitour.form.HelloWorldForm"/>
	</form-beans>
	
	<form-beans>
		<form-bean name="usernameForm" type="it.alpitour.form.UsernameForm"/>
	</form-beans>
	
	<global-forwards>
		<forward name="welcome" path="/Welcome.do"/>
	</global-forwards>
	
	<action-mappings>
		<action path="/Welcome" type="it.alpitour.action.HelloWorldAction" name="helloWorldForm">
			<forward name="success" path="/file/pages/welcome.jsp"/>
		</action>
	</action-mappings>
	
	<action-mappings>
		<action path="/processInput" type="your.package.ExampleAction" name="exampleForm" scope="request" validate="true" input="/inputForm.jsp">
        	<forward name="success" path="/success.jsp" />
        	<forward name="failure" path="/failure.jsp"/>
    	</action>
	</action-mappings>
	
	<message-resources parameter="MessageResources"/>
	
</struts-config>